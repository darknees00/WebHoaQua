@model WebHoaqua.Models.Suplier

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="margin-left: 100px">

    <div style="width: 100%">
        <h1>Edit Suplier</h1>
        <hr />
    </div>
<hr />
    <div class="row" style="margin-top: -300px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SuplierId" />
            <div class="form-group">
                <label asp-for="SuplierName" class="control-label"></label>
                    <input asp-for="SuplierName" class="form-control" style="width: 500px" />
                <span asp-validation-for="SuplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" style="width: 500px" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" style="width: 500px" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>

</div>


